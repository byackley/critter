init
  set walkspeed 1
//
walk-n
  mv 0 -@walkspeed
  -^ %x %y: stand-n
//
walk-s
  mv 0 @walkspeed
  -v %x %y: stand-s
//
walk-w
  mv -@walkspeed 0
  -< %x %y: stand-w
//
walk-e
  mv @walkspeed 0
  -> %x %y: stand-e
//
stand-n
//
stand-s
//
stand-w
//
stand-e
//
*
  +^ %x %y free(@x,@y-1): walk-n
  +v %x %y free(@x,@y+1): walk-s
  +< %x %y free(@x-1,@y): walk-w
  +> %x %y free(@x+1,@y): walk-e
